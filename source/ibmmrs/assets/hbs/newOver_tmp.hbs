    <div class="ibm-common-overlay ibm-overlay-alt-two" data-widget="overlay" id="{{name}}">
        <div class="top-bar {{#if outage}}ibm-background-red-40{{else}}ibm-background-blue-20{{/if}}">
            <div class="icon-wrap">
                {{#if outage}}
                    <h2 class="ibm-h2 ibm-light">{{outage_info.title}}</h2>
                {{else}}
                    <img src="assets/img/whatsNew_icon.png"/>
                    <h2 class="ibm-h2 ibm-light">{{title}}</h2>
                {{/if}}
                             
            </div>        
        </div>
        <div class="info ibm-padding-top-30">
        {{#if outage}}
            <h2 class="ibm-h2 ibm-light ibm-center">{{{outage_info.sub_title}}}</h2>
            <p class="ibm-center">{{{outage_info.copy}}}</p>
        {{else}}

            <h4 class="ibm-h4">{{copy}}</h4>
            <ul class="ibm-padding-top-30">
            {{#each items}}
                <li>
                    <h4 class="ibm-h4 ibm-bold">{{title}} {{#if isNew}}<span class="new-lbl ibm-bold">{{../../new_copy}}</span>{{/if}}</h4>
                    <p>{{{copy}}}</p>
                </li>
            {{/each}}
            </ul>
        {{/if}}

        </div>
    </div>